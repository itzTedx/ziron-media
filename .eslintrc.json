{
  "extends": [
    "next/core-web-vitals",
    "next/typescript",
    "prettier",
    "plugin:jsx-a11y/recommended"
  ],
  "plugins": ["check-file", "jsx-a11y"],
  "rules": {
    "prefer-arrow-callback": ["error"],
    "prefer-template": ["error"],

    "check-file/filename-naming-convention": [
      "error",
      {
        "**/*.{ts,tsx}": "KEBAB_CASE"
      },
      {
        "ignoreMiddleExtensions": true
      }
    ]
  }
}
